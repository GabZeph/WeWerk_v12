<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/toolbar_padding"
    tools:context=".fragments.CalculateBMRFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/text_find_your_one_rep_max"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/toolbar_title_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:orientation="vertical">

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_height_between_title_subtitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_what_is_a_one_rep_max"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/workoutProgramView_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/white_line_height"
            android:background="@color/white"
            android:orientation="vertical" />

        <TextView
            android:padding="@dimen/padding_between_subtitle_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your one rep max is your ability to perform " />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_height_between_subtitles" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_interpreting_your_one_rep_max"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/workoutProgramView_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/white_line_height"
            android:background="@color/white"
            android:orientation="vertical" />

        <TextView
            android:padding="@dimen/padding_between_subtitle_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_height_between_subtitles" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_finding_your_one_rep_max"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/workoutProgramView_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/white_line_height"
            android:background="@color/white"
            android:orientation="vertical" />

        <TextView
            android:padding="@dimen/padding_between_subtitle_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>
</LinearLayout>