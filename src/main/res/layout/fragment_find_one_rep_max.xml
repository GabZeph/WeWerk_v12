<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".fragments.CalculateBMRFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/toolbar_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/text_find_your_one_rep_max"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_title_textsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:orientation="vertical">

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_title_subtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_what_is_a_one_rep_max"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_between_subtitle_description"
                android:text="Your one rep max is your ability to perform a lift with the maximum amount of weight in one concentric movement. Your one rep max is usefull when implementing periodization adn progressive overload into your training program." />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_subtitles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_interpreting_your_one_rep_max"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_between_subtitle_description"
                android:text=" As mentionned earlier, you will have to implement periodization and progressive overload to make progress in the gym.
            You want to train at a relative intensity above 70% while increasing it over your macrocycle (we suggest about 1-3% per week).
              This is where your one rep max will be useful: you will be using your one rep max to calculate your relative intensity, your rep and your sets according to your goals.
             For example, if you want to achieve hypertrophy, research suggest training at a 8 to 12 rep range. However, if developping strength is your goals, studies find that a lower rep range is ideal.
            We suggest that you build a 13 weeks program, the last week being when you will be performing your one rep max test.
            Your mesocycle will consist of 3 macrocycle of 4 weeks each, the first three being your progression week and the last being the deload week.
            We suggest to keep the intensity for your deload week at a relative intensity of 70%" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_subtitles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_finding_your_one_rep_max"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_between_subtitle_description"
                android:text="To find your one rep max, we suggest you to take a week to test all of your lift.
            Make sure to get sufficient rest prior the test to avoid any flukes. However, you should be warned that there are risks while performing one rep max, especially for begginer.
            Therefore, we suggest you to calculate your one rep max by performing the maximum of rep with the most weight without rest.
            We will be using the Epley formula to predict your one rep max. Note: for every rep after 10, the less accurate the Eppley formula becomes.

            1 RM = ( weight x reps x 0.33) + weight" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_subtitles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_calculator"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_weight" />

                <EditText
                    android:id="@+id/findonrepmax_weight_editText"
                    android:layout_width="0dp"
                    android:hint="@string/text_enter_your_lifted_weights_in_kilograms"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_rep" />

                <EditText
                    android:id="@+id/findonrepmax_rep_editText"
                    android:layout_width="0dp"
                    android:hint="@string/text_enter_your_rep"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <Button
                android:id="@+id/findonerepmax_calculate_button"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_calculate" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>