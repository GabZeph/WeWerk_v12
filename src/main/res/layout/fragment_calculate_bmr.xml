<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/toolbar_padding"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".fragments.CalculateBMRFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/text_calculate_your_bmr"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_title_textsize" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:orientation="vertical">


        </LinearLayout>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_title_subtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_what_is_bmr"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_subtitle_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_between_subtitle_description"
                android:text="BMR stands for basal metabolic rate. It represent the calories you burn if you were laying in bed all day. Your BMR varies according to your age, your height, your sex, your body composition and your physical activities " />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_subtitles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_interpreting_your_bmr"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_subtitle_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_between_subtitle_description"
                android:text="Altought your ability to lose weight depends on what you eat and when you eat, your BMR can give you a pretty good idea of how much you can eat. If you eat above your BMR, your body will store fat and if you eat below your BMR, your body will lose weight" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_subtitles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculating your BMR"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_subtitle_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_between_subtitle_description"
                android:text="We will be using the Harris Benedict equation to estimate your BMR. " />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_subtitles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_calculator"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_subtitle_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_weight" />

                <EditText
                    android:id="@+id/findonrepmax_weight_editText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/text_enter_your_lifted_weights_in_kilograms" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_rep" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/text_enter_your_rep" />

            </LinearLayout>

            <Button
                android:id="@+id/bmr_calculate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/text_calculate" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>