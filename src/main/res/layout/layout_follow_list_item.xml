<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:weightSum="100">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/follow_profilePicture_circleImageView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="25"
        android:background="@drawable/follow_image_list_item_corner"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:padding="15dp"
        android:gravity="left|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/follow_realName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real Name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/follow_username_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_username" />

    </LinearLayout>

    <Button
        android:id="@+id/follow_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:background="@drawable/follow_button"
        android:text="@string/text_follow" />

</LinearLayout>