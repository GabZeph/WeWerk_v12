<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/toolbar_paddingtop"
    tools:context=".fragments.FollowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:weightSum="100"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/follow_activity_backButton_imageView"
            android:layout_width="@dimen/back_button_widt"
            android:layout_height="@dimen/back_button_height"
            android:src="@drawable/back"
            android:layout_weight="10"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/follow_activity_toolbarTitle_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:text="Follow"
            android:textAlignment="center"
            android:textSize="@dimen/toolbar_title_textsize" />

        <ImageView
            android:id="@+id/follow_activity_search_imageView"
            android:layout_width="@dimen/back_button_widt"
            android:layout_weight="10"
            android:layout_height="@dimen/back_button_height"
            android:src="@drawable/ic_magnifying_glass"
            android:tint="@color/white" />

    </LinearLayout>

    <!--<SearchView-->
    <!--android:id="@+id/follow_searchView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/searchView_height">-->

    <!--</SearchView>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/follow_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:overScrollMode="never"
        android:scrollbars="none" />

</LinearLayout>