<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/toolbar_padding"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".fragments.CalculateBMIFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/text_calculate_your_bmi"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_title_textsize" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:orientation="vertical">


        </LinearLayout>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_title_subtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_what_is_bmi"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_subtitle_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:padding="@dimen/padding_between_subtitle_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI stands for body mass index. By measuring your body fat composition relatively to your height, your BMI can help assess your health risk. " />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_subtitles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_interpreting_your_bmi"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_subtitle_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:padding="@dimen/padding_between_subtitle_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Below 18.5: your are underweight. Between 18.5 and 24.9: normal weight. Between 25.0 and 29.9: overweight. Above 30.0: obese. Note: Someone with a lot of muscles will have a higher BMI, but that doesn't mean that the individual is unhealthy" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_subtitles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_calculating_your_bmi"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_subtitle_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <TextView
                android:padding="@dimen/padding_between_subtitle_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We will be using the Quetelet index to estimate your BMI. " />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_height_between_subtitles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_calculator"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/workoutProgramView_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/white_line_subtitle_height"
                android:background="@color/white"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_weight" />

                <EditText
                    android:id="@+id/findonrepmax_weight_editText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/text_enter_your_lifted_weights_in_kilograms" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_rep" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/text_enter_your_rep" />

            </LinearLayout>

            <Button
                android:id="@+id/bmi_calculate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/text_calculate" />

        </LinearLayout>
</LinearLayout>

</ScrollView>